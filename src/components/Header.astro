<header class="shadow-lg">
    <a href="/">
        <img
            src="/src/assets/Escudo_UdG.svg"
            alt="Escudo UDG"
            class="w-6 h-8"
        />
    </a>
    <button id="sign-out">
        <img src="/src/assets/logout.svg" alt="Cerrar sesión" />
        Cerrar sesión
    </button>
</header>

<style>
    header {
        border-radius: 0.25rem;
        height: 3rem;
        padding: 1rem;
        top: 0;
        position: sticky;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: white;
    }
    #sign-out {
        display: flex;
        align-items: center;
        color: #2d3c5a;
        padding: 0.25rem;
        gap: 0.5rem;
    }
    #sign-out:hover {
        opacity: 0.5;
    }
</style>

<script>
    const signOutButton = document.getElementById("sign-out");

    // Sign out button click event
    if (signOutButton) {
        signOutButton.addEventListener("click", async () => {
            const confirmSignOut = confirm("¿Cerrar sesión?");
            if (!confirmSignOut) {
                return;
            }
            try {
                const response = await fetch(
                    "http://localhost:4321/api/auth/signout", // API endopoint to sign out
                );
                if (response.ok) {
                    window.location.href = "http://localhost:4321/signin"; // Redirect to sign-in page if sign out is successful
                } else {
                    alert("Error al cerrar sesión");
                }
            } catch (error) {
                console.error("Error:", error);
                alert("Error al cerrar sesión");
            }
        });
    }
</script>
