---
import Header from "../components/Header.astro";

interface Props {
    title: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-dvh p-4 bg-[#2D3C5A]">
		<div class="bg-[#F0F2F6] w-full h-full rounded p-3 overflow-auto">
			<Header/>
			<main class="p-4">
				<slot />
			</main>
		</div>
	</body>
</html>